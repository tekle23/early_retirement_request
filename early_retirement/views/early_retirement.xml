<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

    <record id="early_retirement_action" model="ir.actions.act_window">
        <field name="name">Early Retirement</field>
        <field name="res_model">early.retirement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'search_default_my_courses': 1}"/>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new employee insurance
            </p>

        </field>
    </record>
    <record id="early_retirement_view_form" model="ir.ui.view">
        <field name="name">Early Retirement</field>
        <field name="model">early.retirement</field>
        <field name="arch" type="xml">
            <form string="Employee Insurance">
                <header>
                     <button name="action_submit" type="object" string="Submit" states="draft" class="oe_highlight"/>
                     <button name="action_approve" type="object" string="Approve" states="submit" class="oe_highlight" />
                     <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                               <field name="employee_id"/>
                                <field name="company_id"/>
                                <field name="job_id" />
                                <field name="requested_date" />
                                <field name="approved_by" />
                        </group>


                        <group>

                                <field name="date_of_birth" />
                               <field name="date_hired"/>
                               <field name="age" />
                                <field name="dept_id" />
                               <field name="approved_date" />
                        </group>

                          <notebook>
                            <page name="Note" string="Note">

                              <group>
                                    <group>
                                    <field name="reason" />
                                </group>

                                <group>
                                    <field name="attachement" />
                                </group>
                              </group>
                            </page>
                        </notebook>

                    </group>


                </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="early_retirement_view_tree" model="ir.ui.view">
        <field name="name">Early Retirement</field>
        <field name="model">early.retirement</field>
        <field name="arch" type="xml">
            <tree>

                 <field name="employee_id"/>
                 <field name="company_id"/>
                 <field name="date_of_birth" />
                <field name="requested_date" />
                 <field name="approved_date" />
                <field name="age"/>
                <field name="state" />
            </tree>
        </field>
    </record>


    <menuitem
            id="menu_employee_retirement"
            name="Retirement"
            parent="hr.menu_hr_root"
            action="early_retirement_action"/>
</data>

</odoo>
